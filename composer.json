{
  "name": "static-wiki",
  "description": "A simple, fast company wiki system using Markdown files",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabriel Kanev",
      "email": "mail@gkanev.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "tecnickcom/tcpdf": "^6.10"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Wiki\\": "classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wiki\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "clear-cache": "rm -rf cache/*.cache"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
